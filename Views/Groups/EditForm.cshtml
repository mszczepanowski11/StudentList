@model StudentList.Core.Models.Group
    


<h2>Edycja</h2>

@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();

<div class="form-horizontal">
    <h4>Group</h4>


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(group => group.Id)

    <div class="form-group">
       <br>
        <div class="col-md-10">
            @Html.EditorFor(group => group.Name, "", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(group => group.Name, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">

        <br>
        <div class="col-md-10">
            @Html.EditorFor(group => group.ClassType, "", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(group => group.ClassType, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">

        <br>
        <div class="col-md-10">
            @Html.EditorFor(group => group.ClassNumber, "", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(group => group.ClassNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" asp-action="Update" value="Zapisz" class="btn btn-primary" />
        </div>
    </div>

</div>
    }
    <br>
<div>
    @Html.ActionLink("Powrót do listy","Index")
</div>