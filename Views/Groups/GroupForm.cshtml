@model StudentList.Core.Models.Group

<form method="post" asp-action="Create">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="form-group row">

                <h2 class="text-black-50 pl-3">Dodaj grupę</h2>

                <div class="form-group">
                    <label asp-for="Name" class="control-label col-md-3 col-sm-3 col-xs-12">Nazwa</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ClassType" class="control-label col-md-3 col-sm-3 col-xs-12">Tryb grupy</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input asp-for="ClassType" class="form-control" />
                        <span asp-validation-for="ClassType" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="ClassNumber" class="control-label col-md-3 col-sm-3 col-xs-12">Rok/semestr</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input asp-for="ClassNumber" class="form-control" />
                        <span asp-validation-for="ClassNumber" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <br>
                    <div class="col">
                        <input type="submit" class="btn btn-success" value="Dodaj" />
                    </div>
                    <br>
                    <div class="col">
                        <a class="btn btn-danger" asp-action="Index">Cofnij</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
     @{
         <partial name="_ValidationScriptsPartial"/>
     }
}
