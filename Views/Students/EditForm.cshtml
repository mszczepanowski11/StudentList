@model StudentList.Core.Models.Student

@{
    ViewBag.Title = "EditForm";

}

<h2>Edycja</h2>

@using (Html.BeginForm())
    {
        @Html.AntiForgeryToken();

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(student => student.Id)

    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(student => student.FirstName, "", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(student => student.FirstName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <br>
        <div class="col-md-10">
            @Html.EditorFor(student => student.LastName, "", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(student => student.LastName, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>
    <div class="form-group">
        
        <div class="col-md-10">
            @Html.EditorFor(student => student.IdentityNumber, "", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(student => student.IdentityNumber, "", new { @class = "text-danger" })
        </div>
    </div>
    <br>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" asp-action="Update" value="Zapisz" class="btn btn-primary" />
        </div>
    </div>

    <br>
    <div>
        @Html.ActionLink("Powr√≥t do listy", "Index")
    </div>
</div>
    }