@model StudentList.Core.Models.Student

<form method="post" asp-action="Create">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Dodaj studenta</h2>

                <div class="form-group">
                    <label asp-for="FirstName" class="control-label col-md-3 col-sm-3 col-xs-12">ImiÄ™</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="control-label col-md-3 col-sm-3 col-xs-12">Nazwisko</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="IdentityNumber" class="control-label col-md-3 col-sm-3 col-xs-12">Numer indeksu</label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="IdentityNumber" class="form-control" />
                            <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="form-group">
                        <br>
                        <div class="col">
                            <input type="submit" class="btn btn-success" value="Dodaj" />
                        </div>
                        <br>
                        <div class="col">
                            <a class="btn btn-danger" asp-action="Index">Cofnij</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
